.panel.panel-default.panel-popular
  .panel-heading
    h3.panel-title
      =link_to 'Popular Location', 'popular-location'
  .panel-body.panel-bd-home-popular
    .row.media
    -@wisatas.each do |wisata|
      .col-lg-12.col-md-12.col-sm-12.col-xs-12
        .hovereffect
          = image_tag(wisata.foto, class: "img-responsive center-block", style: "width:300px; height:200px")
          .overlay
            h2 = wisata.nama
            span.glyphicon.glyphicon-heart.love-v1
              span.badge 112
            =link_to 'Lihat', wisata, class: "info"
            span.glyphicon.glyphicon-comment.comment-v1
              span.badge =wisata.reviews.count
