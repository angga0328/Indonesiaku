<p id="notice"><%= notice %></p>

<h1>Listing Hotels</h1>

<table>
  <thead>
    <tr>
      <th>Wisata</th>
      <th>Nama</th>
      <th>Alamat</th>
      <th>Deskripsi</th>
      <th>Telp</th>
      <th>Harga</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.wisata %></td>
        <td><%= hotel.nama %></td>
        <td><%= hotel.alamat %></td>
        <td><%= hotel.deskripsi %></td>
        <td><%= hotel.telp %></td>
        <td><%= hotel.harga %></td>
        <td><%= hotel.latitude %></td>
        <td><%= hotel.longitude %></td>
        <td><%= hotel.foto %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

